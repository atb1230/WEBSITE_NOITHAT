@model IEnumerable<demo_02.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="entry-header">
    <h1 class="entry-title">
        DINING'S DECOR
    </h1>
</header>
<div class="entry-content">
    @foreach (var item in Model)
    {
        <div class="diningroom-widget">
            <a href="/Products/Details/@item.IdProduct">

                <img class="img-pro"
                     src="@Url.Content(item.Picture1)" height="422" width="340" />
            </a>
            <div>
                <span class="name-pro">
                    <a href="/Products/Details/@item.IdProduct" class="link-to-product">
                        @Html.DisplayFor(modelItem => item.NameProduct)
                </span>
                <span class="icon-cart">
                    <a href="/Cart/AddtoCart/@item.IdProduct">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16" aria-label="Right Algin">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                        </svg>
                    </a>

                </span>
            </div>
            <div class="price-pro">
                @Html.DisplayFor(modelItem => item.Price)
            </div>
        </div>

    }
</div>
