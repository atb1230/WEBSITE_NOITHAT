@model demo_02.Models.Customer

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/LoginForCustomerSite.css" rel="stylesheet" />

<div class="login">
    <h2 class="active"> sign in </h2>
    @using (Html.BeginForm("Login", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
<form>

    <span>username</span>
    <input type="text" class="text" name="username" id="uploadCaptureInputFile">
    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    <br>
    <br>
    <span>password</span>
    <input type="password" class="text" name="password" id="uploadCaptureInputFile">
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

    <br>
    <input type="checkbox" id="checkbox-1-1" class="custom-checkbox" />
    <label for="checkbox-1-1">Keep me Signed in</label>
    <button class="signin" onclick="submitForm()">
        Sign In
    </button>

    <hr style=" margin-bottom: 23%;">
    <span class="text-center sign-up" style="opacity:60;">
        Nếu bạn chưa có tài khoản -
        @Html.ActionLink(" đăng ký", "Register")
    </span>

</form>
    }
</div>


